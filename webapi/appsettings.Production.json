{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "webapi.Domain.Controllers": "Information",
      "webapi.Domain.Controllers.Errors": "Error",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=${DB_HOST};Database=${DB_NAME};User Id=${DB_USER};Password=${DB_PASSWORD};TrustServerCertificate=True;",
    "PostgreSQLConnection": "Host=${DB_HOST};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};"
  },
  "ExternalApis": {
    "PolicyDataUrl": "https://portal.burujinsurance.com:1450/api/getPolData",
    "ClaimsDataUrl": "https://portal.burujinsurance.com:1450/api/getClaimsData"
  },
  "Escalation": {
    "RequireMapping": false
  }
}
